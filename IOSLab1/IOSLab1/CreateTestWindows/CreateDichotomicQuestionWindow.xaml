<Window x:Class="IOSLab1.CreateDichotomicQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create dichotomic question" Height="200" Width="580">
    <Grid Background="AliceBlue">
        <Label Content="Question" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="DarkBlue"/>
        <TextBox x:Name="questionTextBox" HorizontalAlignment="Left" Height="46" Margin="102,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450"/>
        <Label Content="Questions number" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="DarkBlue"/>
        <Label x:Name="questionsNumberLabel" Content="0" HorizontalAlignment="Left" Margin="129,78,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="addQuestion" Content="Add question" HorizontalAlignment="Left" 
                Margin="102,125,0,0" VerticalAlignment="Top" Width="80" Background="Azure" BorderBrush="Gray" Click="addQuestion_Click"/>
        <Button x:Name="specifyRules" Content="Specify rules" HorizontalAlignment="Left" 
                Margin="380,125,0,0" VerticalAlignment="Top" Width="80" Background="Azure" BorderBrush="Gray" IsEnabled="False" Click="specifyRules_Click"/>
    </Grid>
</Window>
