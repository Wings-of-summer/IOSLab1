<Window x:Class="IOSLab1.ExecutionTestWindows.DichotomicTestExecutionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dichotomic test execution" Height="190" Width="420">
    <Grid Background="AliceBlue">
        <Label HorizontalAlignment="Left" Margin="20,10,-10,0" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Height="40" Width="370"><Run x:Name="questionLabel" Text=""/></TextBlock>
        </Label>
        <Button x:Name="nextButton" Content="Next" HorizontalAlignment="Left" Margin="162,118,0,0" VerticalAlignment="Top" Width="75" Click="nextButton_Click" Background="Azure" BorderBrush="Gray"/>
        <StackPanel HorizontalAlignment="Left" Height="43" Margin="20,51,0,0" VerticalAlignment="Top" Width="360" Background="White" >
            <RadioButton x:Name="yes" Height="20" Checked="radioButtonChecked" Width="350" Margin="5,5,5,0">Да</RadioButton>
            <RadioButton x:Name="no" Height="20" Checked="radioButtonChecked" Width="350" Margin="5,0">Нет</RadioButton>
        </StackPanel>
    </Grid>
</Window>
