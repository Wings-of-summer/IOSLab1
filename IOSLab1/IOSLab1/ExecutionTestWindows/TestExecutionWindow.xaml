<Window x:Class="IOSLab1.TestExecutionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestExecutionWindow" Height="250" Width="420">
    <Grid Background="AliceBlue">
        <Label HorizontalAlignment="Left" Margin="20,10,-10,0" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Height="40" Width="370"><Run x:Name="questionLabel" Text=""/></TextBlock>
        </Label>
        <StackPanel HorizontalAlignment="Left" Height="87" Margin="20,51,0,0" VerticalAlignment="Top" Width="360" Background="White" >
            <RadioButton Name="a" Height="20" Checked="radioButtonChecked" Width="350" Margin="5,5,5,0"/>
            <RadioButton x:Name="b" Height="20" Checked="radioButtonChecked" Width="350" Margin="5,0"/>
            <RadioButton Name="c" Height="20" Checked="radioButtonChecked" Width="350" Margin="5,0"/>
            <RadioButton x:Name="d" Height="20" Checked="radioButtonChecked" Width="350" Margin="5,0"/>
        </StackPanel>
        <Button x:Name="nextButton" Content="Next" HorizontalAlignment="Left" Margin="161,162,0,0" VerticalAlignment="Top" Width="75" Click="nextButton_Click" Background="Azure" BorderBrush="Gray"/>

    </Grid>
</Window>
